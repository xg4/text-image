{
  "name": "@xg4/text2image",
  "version": "0.1.2",
  "description": "convert text to image by canvas",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "typings": "dist/types/index.d.ts",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "lint": "tslint src/**/*.{ts,tsx} ",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "rollup -c",
    "build": "rimraf dist && npm run build:types && npm run build:js",
    "release:commit": "cross-var git commit -am \"v\"$npm_package_version",
    "release:tag": "cross-var git tag \"v\"$npm_package_version -m \"build: release \"$npm_package_version",
    "release": "npm run release:commit && npm run release:tag && git push --follow-tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint",
      "git add"
    ]
  },
  "keywords": [
    "text",
    "image",
    "convert",
    "canvas",
    "URL"
  ],
  "author": "xg4 <xingor4@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-terser": "^4.0.4",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xg4/text2image.git"
  },
  "bugs": {
    "url": "https://github.com/xg4/text2image/issues"
  },
  "homepage": "https://github.com/xg4/text2image#readme",
  "publishConfig": {
    "access": "public"
  }
}
